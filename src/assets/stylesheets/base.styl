.background
  height: 100vh
  background-color: #000
  background-image(url('/images/p.jpg'))
  background-size: contain;
  background-repeat: no-repeat
  background-position: center
  margin: 0 auto
  opacity: 0
  transition: opacity 2s

.start-animation
  .background
    opacity: 1
    transition-delay: 3.5s
  .outlines
    path
      stroke-dasharray: 1
      transition: stroke-dasharray 4s ease, 
                  stroke-arrayoffset 4s ease

img.svg 
  display: none
      
.outlines
  height: 100vh
  max-width 100%
  margin: 0 auto
  display: block
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  path
    stroke: #000
    opacity: 1
    stroke-dasharray: 350
    stroke-dashoffset: 354
    transition: opacity 1s, 
                stroke 850ms
                

