@import './common'

global-reset()

html
  box-sizing: border-box

*
*:before
*:after
  box-sizing inherit

.container
  background: #000
  svg
    transition: transform 500ms ease
  &.inactive
    svg
      transform: perspective(800px) translate3d(0,0,0) !important
