.background
  height: 100vh
  background-color: #000
  background-image(url('/images/p.jpg'))
  background-size: contain;
  background-repeat: no-repeat
  background-position: center
  margin: 0 auto
  opacity: 0
  transition: opacity 3s

.start-animation
  .background
    opacity: 1
    transition-delay: 4s
  .outlines
    path
      stroke-dasharray: 1
      stroke-dashoffset: 1
      stroke-opacity: 1
      opacity: 1
      transition-delay: 1s



img.svg 
  display: none
      
.outlines
  height: 100vh
  max-width 100%
  margin: 0 auto
  display: block
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  background: transparent
  path
    stroke: #fff
    opacity: 0
    fill: none
    stroke-dasharray: 2063
    stroke-dashoffset: 2060
    stroke-width: 1px
    transition: opacity 1s, 
                stroke 850ms,
                stroke-dasharray 3.8s ease, 
                stroke-dashoffset 3.8s ease

