@import './common'

global-reset()

html
  box-sizing: border-box

*
*:before
*:after
  box-sizing inherit

.container
  &:active
    .background
      opacity: 1
    .outlines
      path
        stroke: #fff

.background
  height: 100vh
  background-color: #000
  background-image(url('/images/p.jpg'))
  background-size: contain;
  background-repeat: no-repeat
  background-position: center
  margin: 0 auto
  opacity: 0
  transition: opacity 1s


.outlines
  height: 100vh
  max-width 100%
  margin: 0 auto
  display: block
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  path
    stroke: #000
    opacity: 1
    transition: opacity 1s, 
                stroke 850ms,
                stroke-dasharray 80ms ease, 
                stroke-arrayoffset 80ms ease
                

