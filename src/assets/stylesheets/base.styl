@import './common'
global-reset()

@import 'fonts'
@import 'typography'

html
  box-sizing: border-box
  -webkit-font-smoothing: antialiased

*
*:before
*:after
  box-sizing inherit


// Colors
$white = #fff
$black = #000
$gray100 = #FAFAFA
$gray200 = #DCDCDC
$gray400 = #929292
$gray700 = #616161
  

$blue = #26E0E0
$lightblue= #85F7F7
$green = #00FFF3
$lightgreen = #A4FFFB

$background-transition= 1s
$background-transition-delay= 0ms

.container
  background: #000
  overflow: hidden
  position: relative
  .outlines
    will-change: transform
    transition: transform 1000ms cubic-bezier(0.54, 0.05, 0, 1)
  &.collapse
    .outlines
      transform: perspective(800px) translate3d(0,0,0) !important

.complete
  .outlines
    cursor: pointer

.background
  height: 100vh
  background-color: #000
  background-image: url('../images/p.jpg')
  background-size: contain;
  background-repeat: no-repeat
  background-position: center
  margin: 0 auto
  opacity: 1
  transition: opacity $background-transition
  transition-delay: $background-transition-delay
  .hide-background &
    opacity: 0


img.svg 
  display: none
      
.outlines
  height: 100vh
  max-width 100%
  margin: 0 auto
  display: block
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  background: transparent
  path
    stroke: $blue
    opacity: 0
    fill: none
    stroke-dasharray: 2063
    stroke-dashoffset: 2060
    stroke-width: 1px
    transition: opacity 1s, 
                stroke 1020ms,
                stroke-dasharray 3.8s ease, 
                stroke-dashoffset 3.8s ease

.complete.collapse
  .outlines
    path
      stroke: $white !important


// ============
// Footer block
// ============

footer
  position: absolute
  left: calc(50% - 450px)
  bottom: 20%
  opacity: 1
  transition: opacity $background-transition
  transition-delay: $background-transition-delay
  z-index: 1
  h1,h2,h3
    text-shadow: 0 2px #000
  h1
    color: $gray100
    text-align: right
    margin-bottom: .3125rem
  h2
    color: $gray200
  .hide-background &
    opacity: 0
  .collapse &
    opacity: 1

.contact
  list-style-type: none
  text-align: right
  li
    display: inline-block
    padding-right: 10px
    a
      display: block
      position: relative
      width: 16px
      &:hover
        path, polygon, polyline
          fill: $blue
          stroke: $blue
  .mail 
    a
      width: 19px
      top: -6px
      polyline, polygon, path, rect
        fill: $black
        stroke: $gray700
      &:hover
        polyline, polygon, path, rect
          fill: $lightblue
          stroke: $blue
  .twitter 
    padding-left: 1px
    a
      top: 3px   
  .linkedin
    a
      top: 1px     
  svg
    width: 100%
    max-width: 100%
    cursor: pointer
  path, polygon, polyline, rect
    transition: fill 220ms, stroke 220ms
    fill: $gray700
    stroke: $gray700
    

// START ANIMATION

.start-animation
  .outlines
    path
      stroke-dasharray: 1
      stroke-dashoffset: 1
      stroke-opacity: 1
      opacity: 1
      transition-delay: 1s

@media (max-width: 1023px)
  footer
    left: calc(50% - 107px)
    bottom: 0
    h1, .contact
      text-align: center

@media only screen and (-webkit-min-device-pixel-ratio: 1.25), only screen and ( min-device-pixel-ratio: 1.25), only screen and ( min-resolution: 200dpi), only screen and ( min-resolution: 1.25dppx) {     -webkit-font-smoothing: subpixel-antialiased; } 